@model IEnumerable<StudentMVC.Models.student>

@{
    ViewBag.Title = "Index";
}

<h2>Students</h2>


<table class="table" border="1">
    
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RollNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FatherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MotherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RollNo)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FatherName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MotherName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RollNo }) |
            @Html.ActionLink("Details", "Details", new { id=item.RollNo }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RollNo })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Add Student", "Create")
</p>
